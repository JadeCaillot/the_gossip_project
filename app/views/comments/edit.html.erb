<html>
  <head>
    <title>The Gossip Project</title>
  </head>

  <body>
    <div class="jumbotron">
      <h1 class="display-4">Vous voulez modifier un commentaire ?</h1>
    </div>

    <div class= 'container text-center'>
        <%= form_for @comment do |f|%>
        <%= label_tag 'Contenu' %>
        <%= f.text_field :content, :class=>'form-control' %>
        <br />       
        <%= f.submit 'Update Comment', :class=>'btn btn-secondary'%>
        <% end %>
    </div>
  </body>
</html>

  